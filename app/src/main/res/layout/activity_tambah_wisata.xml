<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahWisataActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Tambah Wisata"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/white"

                />

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateTint="@color/hijau"
                android:visibility="gone"
                android:id="@+id/progressBar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Wisata"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Nama Wisata"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_nama"
                android:drawableTint="@color/hijau"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nomor Telepon"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etNotlp"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edit_text"
                android:hint="No tlp"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_tlp"
                android:drawableTint="@color/hijau"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etAlamat"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_edit_text"
                android:hint="Alamat"
                android:paddingStart="15dp"
                android:drawableStart="@drawable/ic_alamat"
                android:drawableTint="@color/hijau"
                android:drawablePadding="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gambar"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btnGambar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pilih Gambar"/>

            <ImageView
                android:id="@+id/imgGambar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mesjid_raya"
                android:layout_gravity="center"
                android:background="@color/black"
                android:visibility="gone"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Wisata"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/etDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:hint="Deskripsi wisata"
                android:gravity="start"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:inputType="textMultiLine"/>


            <Button
                android:id="@+id/btnTambah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tambah"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/hijau"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>